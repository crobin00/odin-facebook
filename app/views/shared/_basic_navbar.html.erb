<!-- Navbar -->
<div class="bg-white flex justify-between shadow-md sticky top-0">
  <!-- Left side of navbar -->
  <%= link_to root_path do %>
    <div class="h-full w-24 flex justify-center items-center">
      <%= image_tag "whale-logo.png", class: "w-14" %>
    </div>
  <% end %>
  <!-- Middle of navbar -->
  <div class="hidden sm:flex">
    <!-- Home icon -->
    <%= link_to root_path do %>
      <div
      class="h-full w-24 flex justify-center items-center"
    >
        <svg
        class="fill-sky-500 w-8 h-8 hover:fill-sky-800"
        xmlns="http://www.w3.org/2000/svg"
        height="1em"
        viewBox="0 0 576 512"
      >
          <!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
          <path
          d="M575.8 255.5c0 18-15 32.1-32 32.1h-32l.7 160.2c0 2.7-.2 5.4-.5 8.1V472c0 22.1-17.9 40-40 40H456c-1.1 0-2.2 0-3.3-.1c-1.4 .1-2.8 .1-4.2 .1H416 392c-22.1 0-40-17.9-40-40V448 384c0-17.7-14.3-32-32-32H256c-17.7 0-32 14.3-32 32v64 24c0 22.1-17.9 40-40 40H160 128.1c-1.5 0-3-.1-4.5-.2c-1.2 .1-2.4 .2-3.6 .2H104c-22.1 0-40-17.9-40-40V360c0-.9 0-1.9 .1-2.8V287.6H32c-18 0-32-14-32-32.1c0-9 3-17 10-24L266.4 8c7-7 15-8 22-8s15 2 21 7L564.8 231.5c8 7 12 15 11 24z"
        />
          </svg>
        </div>
      <% end %>
      <!-- Friends icon -->
      <%= link_to users_path do %>
        <div class="h-full w-24 flex justify-center items-center">
          <svg
        class="fill-sky-500 w-8 h-8 hover:fill-sky-800"
        xmlns="http://www.w3.org/2000/svg"
        height="1em"
        viewBox="0 0 640 512"
      >
            <!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
            <path
          d="M96 128a128 128 0 1 1 256 0A128 128 0 1 1 96 128zM0 482.3C0 383.8 79.8 304 178.3 304h91.4C368.2 304 448 383.8 448 482.3c0 16.4-13.3 29.7-29.7 29.7H29.7C13.3 512 0 498.7 0 482.3zM609.3 512H471.4c5.4-9.4 8.6-20.3 8.6-32v-8c0-60.7-27.1-115.2-69.8-151.8c2.4-.1 4.7-.2 7.1-.2h61.4C567.8 320 640 392.2 640 481.3c0 17-13.8 30.7-30.7 30.7zM432 256c-31 0-59-12.6-79.3-32.9C372.4 196.5 384 163.6 384 128c0-26.8-6.6-52.1-18.3-74.3C384.3 40.1 407.2 32 432 32c61.9 0 112 50.1 112 112s-50.1 112-112 112z"
        />
            </svg>
          </div>
        <% end %>
      </div>
      <!-- Right side of navbar -->
      <div class="flex">
        <!-- Notification icon -->
        <%= link_to notifications_path do %>
          <div class="w-14 h-full flex justify-center items-center">
            <svg
        class="w-6 h-6"
        xmlns="http://www.w3.org/2000/svg"
        height="1em"
        viewBox="0 0 448 512"
      >
              <!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
              <path
          d="M224 0c-17.7 0-32 14.3-32 32V51.2C119 66 64 130.6 64 208v18.8c0 47-17.3 92.4-48.5 127.6l-7.4 8.3c-8.4 9.4-10.4 22.9-5.3 34.4S19.4 416 32 416H416c12.6 0 24-7.4 29.2-18.9s3.1-25-5.3-34.4l-7.4-8.3C401.3 319.2 384 273.9 384 226.8V208c0-77.4-55-142-128-156.8V32c0-17.7-14.3-32-32-32zm45.3 493.3c12-12 18.7-28.3 18.7-45.3H224 160c0 17 6.7 33.3 18.7 45.3s28.3 18.7 45.3 18.7s33.3-6.7 45.3-18.7z"
        />
              </svg>
            </div>
          <% end %>
          <!-- User icon -->
          <div data-controller="visibility">
            <div class="w-14 h-full flex justify-center items-center relative cursor-pointer" data-action="click->visibility#toggle">
              <%= image_tag current_user.profile_pic_url, class: "w-10 h-10 rounded-full" %>
              <div class="hidden absolute right-0 top-12 z-10 mt-2 w-56 origin-top-right rounded-md bg-white shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" data-visibility-target="hideable">
                <div class="py-1">
                  <%= link_to "Profile", user_path(current_user), class: "block px-4 py-2 text-sm hover:bg-gray-200" %>
                  <%= link_to "Account Settings", edit_user_registration_path, class: "block px-4 py-2 text-sm hover:bg-gray-200" %>
                  <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "block w-full px-4 py-2 text-left text-sm hover:bg-gray-200" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
