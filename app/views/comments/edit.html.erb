<div class="flex justify-center mt-10">
  <div
  class="w-full sm:w-10/12 lg:w-8/12 bg-white p-4 rounded-lg shadow-xl mb-8"
>
    <%= turbo_frame_tag dom_id(@comment) do %>
      <%= form_with url: post_comment_path(@post, @comment), method: :patch do |f| %>
        <div class="flex gap-2 items-center">
          <%= f.text_field :body, required: true, autocomplete: "off", 
          input: "#{@comment.body}",
  class: "flex-1 w-full my-2 rounded-md placeholder:font-extralight
  border-slate-300 bg-gray-100 text-sm" %>
          <%= f.submit "Edit comment", class: "bg-blue-500 h-10 px-2 rounded-md
  cursor-pointer text-white hover:bg-blue-800"  %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
