<div class="bg-sky-50 min-h-screen">
  <%= render partial: "shared/basic_navbar" %>
  <div>
    <div
      class="grid grid-cols-1 justify-items-center w-full py-16 max-w-6xl mx-auto"
    >
      <h1 class="font-medium mb-4 text-xl"><%= @user.first_name %> <%= @user.last_name %>'s friends</h1>
      <% @friends.each do |friend| %>
        <%= render partial: "friends/friend", locals: {friend: friend} %>
      <% end %>
    </div>
  </div>
</div>
