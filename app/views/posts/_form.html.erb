<div
  class="w-full sm:w-10/12 lg:w-8/12 bg-white p-4 rounded-lg shadow-xl mb-8 relative"
>
  <%= form_with model: post do |f| %>
    <div>
      <%= f.text_field :body, required: true, autocomplete: "off",
  placeholder: "What's on your mind, #{current_user.first_name}?",
  class: "w-full mb-4 rounded-md placeholder:font-extralight
  border-slate-300 bg-gray-100" %>
    </div>
    <div class="relative" data-controller="file">
      <svg class="absolute top-0 left-0 w-8 h-8 fill-sky-500" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 512 512"><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
        <path d="M0 96C0 60.7 28.7 32 64 32H448c35.3 0 64 28.7 64 64V416c0 35.3-28.7 64-64 64H64c-35.3 0-64-28.7-64-64V96zM323.8 202.5c-4.5-6.6-11.9-10.5-19.8-10.5s-15.4 3.9-19.8 10.5l-87 127.6L170.7 297c-4.6-5.7-11.5-9-18.7-9s-14.2 3.3-18.7 9l-64 80c-5.8 7.2-6.9 17.1-2.9 25.4s12.4 13.6 21.6 13.6h96 32H424c8.9 0 17.1-4.9 21.2-12.8s3.6-17.4-1.4-24.7l-120-176zM112 192a48 48 0 1 0 0-96 48 48 0 1 0 0 96z"/>
      </svg>
      <%= f.file_field :photo, accept: 'image/png,image/gif,image/jpeg', class: "cursor-pointer absolute top-0 left-0 border border-red-500 w-8 h-8 opacity-0", data: { action: "file#displayFileName" } %>
      <span class="absolute left-10 top-1" data-file-target="nameable"></span>
    </div>
    <div class="flex justify-end">
      <%= f.submit "Create post", class: "bg-blue-500 h-10 px-2 rounded-md
  cursor-pointer text-white hover:bg-blue-800" %>
    </div>
  <% end %>
</div>
